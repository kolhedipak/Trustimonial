{
  "name": "trustimonials",
  "version": "1.0.0",
  "description": "MVP of a user-friendly testimonial collection and display platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
